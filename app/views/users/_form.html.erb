<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ol>
<% end %>
<div class="col col-6">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, :required => true, :class => "block full-width field-light" %>
      <%= f.label :email %>
      <%= f.text_field :email, :class => "block full-width field-light" %>
      <%= f.label :password %>
      <%= f.password_field :password, :class => "block full-width field-light" %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => "block full-width field-light" %>
    </div>
    <%= f.submit "Sign Up", :class => "button" %>
  <% end %>
</div>
